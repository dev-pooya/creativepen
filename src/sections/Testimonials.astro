---
import TestimonialsCard from "@/components/TestimonialsCard";
import { testimonials } from "../content/testimonials";
import SectionTitle from "@/components/SectionTitle.astro";
---

<section class="py-10 mt-5 relative">
  <div class="max-w-screen-xl mx-auto px-5 md:px-5 lg:px-0">
    <SectionTitle
      title="نظرات مشتریان"
      subtitle=" رضایت مشتریان اولویت ماست "
      effectiveTitle="testimonials"
    />
    <div
      class="mx-auto grid md:grid-cols-3 gap-4 lg:gap-6 md:mt-16 mt-8"
      style="opacity: 1; transform: translateY(0px);"
    >
      {
        testimonials.map((testimonial, index) => (
          <TestimonialsCard sublist={testimonial} index={index} />
        ))
      }
    </div>
  </div>
</section>
